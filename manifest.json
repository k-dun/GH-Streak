{
  "manifest_version": 2,
  "name": "GH Streak",
  "version": "1.0",
  "description": "Displays Github contribution squares and your current streak.",
  "permissions": [
    "https://github.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}